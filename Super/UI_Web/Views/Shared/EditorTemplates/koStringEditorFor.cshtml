@model string
@if ((ViewData["koObservablePrefix"] != "") && (ViewData["koObservablePrefix"] != null))
{ ViewData["koObservablePrefix"] = ViewData["koObservablePrefix"] + "()."; }
@Html.TextBox("", Model, new
{
    @class = ViewData["class"],
    width = 100,
    // or you could also use ViewData.ModelMetadata.PropertyName if you want to get only the property name 
    //and not the entire navigation hierarchy
    data_bind = string.Format("value: {0}{1}, uniqueName: true", ViewData["koObservablePrefix"], ViewData.TemplateInfo.GetFullHtmlFieldName(""))
}) 