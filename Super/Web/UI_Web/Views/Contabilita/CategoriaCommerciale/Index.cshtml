@{
    ViewBag.Title = "CategoriaCommerciale";
    Layout = "~/Content/Layout/Earthlingtwo/_Layout.cshtml";// "~/Views/Shared/_LayoutDetailTemplate.cshtml"
}
@section JavaScript {
    <script src="@Url.Content("~/Scripts/Super/Contabilita/Commands/vo-interval.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Super/Contabilita/Commands/cmd-CategoriaCommerciale.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Super/Contabilita/ViewModel/vm-CategoriaCommerciale-index.js")" type="text/javascript"></script>
}
<h2>
    categoriaCommerciale</h2>
<div id="FilterResults">
    <form id="formFilter" class="formFilter">
    <fieldset>
        <legend>Filtro</legend>
        <label>
            Description :</label><input type="text" id="filtroDescription" data-bind=" value:Description " />
        <div style="clear: both;">
            &nbsp;</div>
        <a class="button" data-bind="click: GetItems.bind($data, 1)" href="#">Visualizza</a>
    </fieldset>
    </form>
</div>
<div id="List" data-bind='template: "categoriaCommercialeListTemplate"'></div><br />
<div id="pagination" class="pagebar"></div>
<p>
    <a class="button" data-bind="click: ShowCreateCategoriaCommerciale" href="#">Aggiungi categoria commerciale</a>
</p>


<div id="details" style="overflow: hidden;">
</div>
<script type="text/html" id="categoriaCommercialeListTemplate">
    <table width=100% class="table-standard"> 
        <tr>
            <th>
                Description
            </th>
            <th>
                CreationDate
            </th>
            <th colspan="2">
                Azione
            </th>
        </tr>
        
        <% _.each(Items(), function(item) { %>
        <tr>
            
            <td>
                <%= item.Description() %>
            </td>
            <td>
                <%= item.CreationDate() %>
            </td>
            <td>
                <a data-bind="click: function() { viewModel.ShowEditCategoriaCommerciale(item) }" href="#"><img src="@Url.Content("~/Images/Edit.gif")" border=0></a>
            </td>
            <td>
                <a data-bind="click: function() { viewModel.ShowDeleteCategoriaCommerciale(item) }" href="#"><img src="@Url.Content("~/Images/Delete.gif")" border=0></a>
            </td>
        </tr>
        <% }) %>
    </table>
</script>


<script language="javascript">

    
    var urlCreateCategoriaCommerciale = "@Url.Action("CreateCategoriaCommerciale", "CategoriaCommerciale")";
    var urlFetchBuilderEditCategoriaCommerciale = new UrlFetchBuilder("@Url.Action("EditCategoriaCommerciale", "CategoriaCommerciale")");
    var urlFetchBuilderDeleteCategoriaCommerciale = new UrlFetchBuilder("@Url.Action("DeleteCategoriaCommerciale", "CategoriaCommerciale")");
    var urlGetItems ="@Url.Action("GetItems", "CategoriaCommerciale")";
    
    

    var viewModel = new vmStuff( 1, 10,
        urlGetItems,
        urlCreateCategoriaCommerciale,
        urlFetchBuilderEditCategoriaCommerciale,
        urlFetchBuilderDeleteCategoriaCommerciale);
    ko.applyBindings(viewModel);

    viewModel.GetItems(viewModel.PageNum());
       
</script>
